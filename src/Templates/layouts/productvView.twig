{% for book in pagination %}
    <div class="col-lg-2" style="margin: 25px;">

        <div class="row">
            <div class="col-lg-12" style="text-align: center;">
                <img style="width: 200px; height: 200px;" src="http://localhost:8000/{{ book.imagePath }}" alt="" />
                <p style="font-size: 10px">{{ book.title| e }}</p>
                <p style="font-size: 10px"> By {{ book.author | e }}</p>
            </div>
            <div class="col-lg-12">
                <a class="btn btn-info btn-block" href="{{app.url_generator.generate('viewBookBySlug', {'slug' : book.slug }) }}">View</a>
            </div>
        </div>
    </div>
{% endfor %}