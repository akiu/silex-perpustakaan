<body>
	<header id="header" style="margin: 0px;"><!--header-->
		
		
		<div class="header-middle"><!--header-middle-->
			<div class="container">
				<div class="row">
					<div class="col-sm-4">
						<div class="logo pull-left">
							<h3><span style="color: #009CE1">E</span>-Perpus</h3>
						</div>
						
					</div>
					<div class="col-sm-8">
						<div class="shop-menu pull-right">
							<ul class="nav navbar-nav">
                                {% set session = app.session.get('role') %}
                                {% if session['value'] is defined  %}
								<li><a href={{app.url_generator.generate('userProfile') }}><i class="fa fa-user"></i> Account</a></li>
								<li><a href=""><i class="fa fa-star"></i> Wishlist</a></li>
                                {% endif %}

								{% set session = app.session.get('role') %}
                                {% if session['value'] is defined  %}
                                <li><a href={{ app.url_generator.generate('userLogout') }} ><i class="glyphicon glyphicon-off"></i>Logout</a></li>
                                {% else %}
                                <li><a href={{ app.url_generator.generate('userLogin') }} ><i class="fa fa-lock"></i>Login</a></li>
                                <li><a href={{app.url_generator.generate('userSignup') }} ><i class="fa fa-lock"></i> Sign Up</a></li>

                                {% endif %}

							</ul>
						</div>
					</div>
				</div>
			</div>
		</div><!--/header-middle-->
	
		<div class="header-bottom"><!--header-bottom-->
			<div class="container">
				<div class="row">
					<div class="col-sm-9">
						<div class="navbar-header">
							<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
								<span class="sr-only">Toggle navigation</span>
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
							</button>
						</div>
						<div class="mainmenu pull-left">
							<ul class="nav navbar-nav collapse navbar-collapse">
								<li><a href="http://localhost:8000/home">Home</a></li>
								<li class="dropdown"><a href="#">Books category<i class="fa fa-angle-down"></i></a>
                                    <ul role="menu" class="sub-menu">
										{% for category in categories %}
                                            <li><a href="{{ app.url_generator.generate('viewBooksByCategory',
                                                {'slug' : category }) }}">{{ category }}</a></li>
                                        {% endfor %}
                                    </ul>
                                </li>
								<li class="dropdown"><a href="#">Digital Books Category<i class="fa fa-angle-down"></i></a>
									<ul role="menu" class="sub-menu">
										{% for category in categories %}
											<li><a href="{{ app.url_generator.generate('getDigitalBookByCategory',
												{'slug' : category}) }}">{{ category }}</a></li>
										{% endfor %}
									</ul>
								</li>

							</ul>
						</div>
					</div>
					<div class="col-sm-3">
						<div class="search_box pull-right">
							<input type="text" placeholder="Search"/>
						</div>
					</div>
				</div>
			</div>
		</div><!--/header-bottom-->
	</header><!--/header-->
	

	
	
	