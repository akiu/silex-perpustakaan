{% include "admin/layouts/header.twig" %}

<!-- Page Content -->
<div id="page-wrapper">

    <div class="row">
        <div class="col-lg-12">
            <br />



            <div class="row">
                <div class="col-lg-4">
                    <div class="panel panel-success">
                        <div class="panel-heading"><h6 style="color: white;">Book Picture</h6></div>
                        <div class="panel-body" style="text-align: center;">

                            <img style="widht: 300px; height: 300px;"
                                 src=" http://localhost:8000/{{ data.imagePath | e }}" />

                        </div>
                    </div>
                </div>

                <div class="col-lg-7">
                    <h2>{{ data.title | e }}</h2>
                    <p><i>By .{{ data.author }}</i></p>
                    <p>{{ data.description | e }}</p>
                    <div class="row">
                        <div class="col-lg-6">
                            <a class="btn btn-info btn-block">Edit</a>
                        </div>

                        <div class="col-lg-6">
                            <form method="POST" action="{{app.url_generator.generate('deleteBySlug', {'slug' : data.slug}) }}">
                                <input class="btn btn-danger btn-block" value="Delete" type="submit">
                            </form>
                        </div>
                    </div>
                </div>



            </div>

        </div>
    </div>

    <!-- /#page-content-wrapper -->
</div>

{% include "admin/layouts/js.twig" %}

<script>
    $("#goto").click(function() {

        var category = $( "#category option:selected" ).text();

        location.href = 'http://localhost:8000/admin/book/category/' + category;

    });
</script>

