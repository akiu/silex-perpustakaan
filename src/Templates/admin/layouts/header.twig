<body>

<div id="wrapper">

    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="index.html">E-Perpus Admin</a>
        </div>
        <!-- /.navbar-header -->

        <ul class="nav navbar-top-links navbar-right">
            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <i {% if requestCount != 0 %}
                            style="color: red;"
                    {% endif %}

                            class="fa fa-bell fa-fw"></i>  <i class="fa fa-caret-down"></i>
                </a>
                <ul class="dropdown-menu dropdown-alerts">
                    {% if requestCount != 0 %}
                        <li>
                            <a href="#">
                                <div>
                                    <i class="fa fa-star fa-fw"></i> New Borrow Request
                                    <span class="badge alert-danger" style="color: white;">{{ requestCount }}</span>
                                </div>
                            </a>
                        </li>
                    {% else %}
                        <li>
                            <a href="#">
                                <div>
                                    <p>You dont have request</p>
                                </div>
                            </a>
                        </li>
                    {% endif %}

                </ul>
                <!-- /.dropdown-alerts -->
            </li>
            <!-- /.dropdown -->
            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="fa fa-user fa-fw"></i>  <i class="fa fa-caret-down"></i>
                </a>
                <ul class="dropdown-menu dropdown-user">
                    <li><a href="#"><i class="fa fa-gear fa-fw"></i> Settings</a>
                    </li>
                    <li class="divider"></li>
                    <li>
                        <form method="POST" action="{{app.url_generator.generate('adminLogout') }}">
                            <input style="margin-left: 5px; margin-right: 5px;" type="submit" value="Log Out" class="btn btn-danger btn-block" />
                        </form>
                    </li>
                </ul>
                <!-- /.dropdown-user -->
            </li>
            <!-- /.dropdown -->
        </ul>
        <!-- /.navbar-top-links -->

        <div class="navbar-default sidebar" role="navigation">
            <div class="sidebar-nav navbar-collapse">
                <ul class="nav" id="side-menu">
                    <br />
                    <br />

                    <li>
                        <a class="active" href="{{app.url_generator.generate('adminDashboard') }}"><i class="fa fa-dashboard fa-fw"></i> Dashboard</a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-book fa-fw"></i><span class="fa arrow"></span>Books Management</a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a href="{{app.url_generator.generate('addBook') }}"><i class="fa fa-plus fa-fw"></i> Add real book</a>
                            </li>
                            <li>
                                <a href="{{app.url_generator.generate('addDigBook') }}"><i class="fa fa-plus fa-fw"></i> Add Digital Book</a>
                            </li>
                            <li>
                                <a href="{{app.url_generator.generate('browseBook') }}"><i class="fa fa-search fa-fw"></i> Browse Real Book</a>
                            </li>
                            <li>
                                <a href="{{app.url_generator.generate('viewDigitalBooksCategory') }}"><i class="fa fa-search fa-fw"></i> Browse Digital Book</a>
                            </li>
                            <li>
                                <a href="{{app.url_generator.generate('viewFeaturedBooks') }}"><i class="fa fa-search fa-fw"></i> Featured Books</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="{{app.url_generator.generate('addCategory') }}"><i class="fa fa-edit fa-fw"></i> Category Management</a>
                    </li>
                    <li>

                        <a href="#"><i class="fa fa-star"></i> Borrowing <span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a href="{{app.url_generator.generate('viewAllBorrowRequest') }}">
                                    <i class="fa fa-sign-in"></i> Borrowing Requests
                                    {% if requestCount != 0 %}

                                                    <span class="badge alert-danger" style="color: white;">{{ requestCount }}</span>
                                    {% endif %}
                                </a>
                            </li>
                            <li>
                                <a href="{{app.url_generator.generate('viewAllBorrowing') }}">
                                    <i class="fa fa-sign-out"></i> In Borrow Books <span style="color: white;" class="badge alert-danger">{{ countOfBorrowing }}</span> </a>
                            </li>
                            <li>
                                <a href="{{app.url_generator.generate('getLateBooks') }}">
                                    <i class="fa fa-ban"></i> Late Books</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-user fa-fw"></i> User<span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a href="{{app.url_generator.generate('viewAllUsers') }}"><i class="fa fa-list"></i> Browse All Users</a>
                            </li>
                            <li>
                                <a href="{{app.url_generator.generate('getPendingUser') }}"><i class="fa fa-list"></i> Browse Pending Users</a>
                            </li>
                            <li>
                                <a href="{{app.url_generator.generate('getBannedUser') }}"><i class="fa fa-list"></i> Browse Banned Users</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-lock fa-fw"></i> Admin Management<span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a href="{{app.url_generator.generate('viewAllAdmin') }}"><i class="fa fa-user fa-fw"></i>Admin List</a>
                            </li>
                            <li>
                                <a href=""><i class="fa fa-plus fa-fw"></i> Add Admin</a>
                            </li>
                        </ul>
                    </li>

                </ul>
            </div>
            <!-- /.sidebar-collapse -->
        </div>
        <!-- /.navbar-static-side -->
    </nav>
