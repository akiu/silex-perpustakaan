    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-success">
                <div class="panel-heading">Add Admin</div>
                <div class="panel-body">
                    <form action="{{ app.url_generator.generate('addAdmin')  }}" method="POST" novalidate>
                        <div class="form-group">
                            {{ form_label(form.username) }}
                            {{ form_widget(form.username, {'attr' : {'class' : 'form-control', 'placeholder':'username'}}) }}
                            <div style="color: red;">
                                {{ form_errors(form.username) }}

                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.email) }}
                            {{ form_widget(form.email, {'attr' : {'class' : 'form-control', 'placeholder':'email'}}) }}
                            <div style="color: red;">
                                {{ form_errors(form.email) }}

                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.password) }}
                            {{ form_widget(form.password, {'attr' : {'class' : 'form-control', 'placeholder':'password'}}) }}
                            <div style="color: red;">
                                {{ form_errors(form.password) }}

                            </div>
                        </div>

                        {{ form_row(form._token) }}

                        <div class="form-group">

                            {{ form_widget(form.submit, {'attr' : {'class' : 'btn btn-success'}}) }}

                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
