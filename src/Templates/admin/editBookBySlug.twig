{% include "admin/layouts/header.twig" %}

<!-- Page Content -->
<div id="page-wrapper">

    <div class="row" style="margin-top: 30px;">

        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-8">
                    <div class="panel panel-default">
                        <div class="panel-heading">Edit Book Form</div>
                        <div class="panel-body">
                            <form enctype="multipart/form-data" action="{{app.url_generator.generate('editBookBySlug', {'slug' : data.slug}) }}" method="POST">
                                <div class="form-group">
                                    <label for="title">Book Title</label>
                                    <input type="text" value="{{ data.title }}" name="bookTitle" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label for="category">Category</label>
                                    <select name="bookCategory" class="form-control">
                                        {% for category in categories %}
                                            <option

                                                    value="{{ category.id }}"
                                                    {% if category.id == data.category  %}
                                                        selected="selected"
                                                    {% endif %}
                                                    >{{ category.name }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="bookAuthor">Book Author</label>
                                    <input value="{{ data.author }}" type="text" name="bookAuthor" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label for="description">Book Description</label>
                    <textarea  name="bookDescription" class="form-control">{{ data.description }}
                    </textarea>
                                </div>
                                <div class="form-group">
                                    <label for="totalPage">Total Page</label>
                                    <input type="number" name="totalPage"  value="{{ data.totalPage }}" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label for="author">Image Book</label>
                                    <input type="file" name="imageBook" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Edit" class="btn btn-success" />
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
                <div class="col-lg-4">

                    <div class="panel panel-default">
                        <div class="panel-heading">Book Image</div>
                        <div class="panel-body" style="padding: 20px;">
                            <img style="width: 280px; height:280px;" src="http://localhost:8000/{{ data.imagePath }}" />

                        </div>
                    </div>

                </div>
            </div>


        </div>
    </div>

    <!-- /#page-content-wrapper -->

</div>

{% include "admin/layouts/js.twig" %}

<script>
    $(document).ready(function() {

        $(".pagination").find("a").addClass('btn btn-primary');

        $(".pagination").find("span").addClass('btn btn-danger');

        $(".pagination > ul > li").css("display", "inline");


    });
</script>

